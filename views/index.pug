extends layout
block content
  .container
      h2 
        p
         | Global Weather 
      br
      br
      .row
        .col-md-6
          form.form-inline(method="post", action="weather")
            .form-group
              label.sr-only(for="inputEmail") City Name
              input.form-control( name="city" type="text" placeholder="Enter a city name" required='required')
              
            |    
            button.btn.btn-primary(type="submit") Get Weather
          
        hr
        .row
        .col-md-12
          p
           br
           br
           strong Weather Today #{message}
          table.table
            thead
              tr
                th Longitude / Latitude
                
                th Pressure
                th Temprature (metric)
                th Humidty
                th Speed
            tbody
               if weather
                tr
                  td
                    #{weather.coord.lon} / #{weather.coord.lat}
                  td 
                     #{weather.main.pressure} 
                  td
                     #{weather.main.temp}
                  td
                     #{weather.main.humidity}
                  td
                     #{weather.wind.speed}
               else
                tr
                    td(colspan="6")
                      | Enter a city name and click Get Weather button 
          
          strong Forecast in 5 Days#{message}
          table.table
            thead
              tr
                th Longitude / Latitude

                th Temprature Min (metric)
                th Temprature Max (metric)
                th Humidty
                th Speed
                th Time
            tbody
               if forecast
                tr
                  td
                    #{forecast.city.coord.lon} /#{forecast.city.coord.lat}
                  td
                     #{forecast.list[0].main.temp_min}
                  td
                     #{forecast.list[0].main.temp_max}
                  td
                     #{forecast.list[0].main.humidity}
                  td
                     #{forecast.list[0].wind.speed}
                  td 
                     #{forecast.list[0].dt_txt}   
                                           